# EditorConfig helps keep consistent coding styles across editors/IDEs
# Place this file at the repository root.

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Defaults
indent_style = space
indent_size = 2

# Python files: 4 spaces
[*.py]
indent_size = 4

# Makefile must use tabs
[Makefile]
indent_style = tab

# Markdown: don't strip trailing spaces (they can mean line breaks)
[*.md]
trim_trailing_whitespace = false

# JSON/YAML/TOML stay at 2 spaces (explicit)
[*.{json,yml,yaml,toml}]
indent_size = 2

# Frontend source (JS/TS/React/CSS): 2 spaces
[*.{js,jsx,ts,tsx,css,scss}]
indent_size = 2
